{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "studio/container",
    "version": "1.0.0",
    "title": "Studio Container",
    "category": "studio-blocks",
    "icon": "layout",
    "description": "Advanced layout container with Studio design token integration.",
    "keywords": ["container", "layout", "studio", "wrapper"],
    "textdomain": "ds-studio",
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "padding": true,
            "margin": true
        },
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "studioBackgroundColor": {
            "type": "string",
            "default": ""
        },
        "studioBackgroundGradient": {
            "type": "string",
            "default": ""
        },
        "studioPadding": {
            "type": "object",
            "default": {
                "top": "",
                "right": "",
                "bottom": "",
                "left": ""
            }
        },
        "studioMargin": {
            "type": "object",
            "default": {
                "top": "",
                "bottom": ""
            }
        },
        "studioBorderRadius": {
            "type": "string",
            "default": ""
        },
        "studioMinHeight": {
            "type": "string",
            "default": ""
        },
        "studioDisplay": {
            "type": "string",
            "default": "block",
            "enum": ["block", "flex", "grid"]
        },
        "studioFlexDirection": {
            "type": "string",
            "default": "column",
            "enum": ["row", "column"]
        },
        "studioJustifyContent": {
            "type": "string",
            "default": "flex-start",
            "enum": ["flex-start", "center", "flex-end", "space-between", "space-around", "space-evenly"]
        },
        "studioAlignItems": {
            "type": "string",
            "default": "stretch",
            "enum": ["stretch", "flex-start", "center", "flex-end"]
        },
        "studioGap": {
            "type": "string",
            "default": ""
        },
        "studioGridColumns": {
            "type": "string",
            "default": ""
        },
        "studioGridRows": {
            "type": "string",
            "default": ""
        }
    },
    "providesContext": {
        "studio/containerStyles": "attributes"
    },
    "usesContext": ["postId", "postType"],
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css"
}
