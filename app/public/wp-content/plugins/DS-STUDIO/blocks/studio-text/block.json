{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "studio/text",
    "version": "1.0.0",
    "title": "Studio Text",
    "category": "studio-blocks",
    "icon": "editor-textcolor",
    "description": "Enhanced text block with Studio typography presets and design token integration.",
    "keywords": ["text", "typography", "studio", "design tokens"],
    "textdomain": "ds-studio",
    "supports": {
        "html": false,
        "align": ["left", "center", "right", "wide", "full"],
        "anchor": true,
        "className": true,
        "color": {
            "gradients": true,
            "text": true,
            "background": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true,
            "fontFamily": true,
            "fontWeight": true
        }
    },
    "attributes": {
        "content": {
            "type": "string",
            "source": "html",
            "selector": ".studio-text-content",
            "default": ""
        },
        "tagName": {
            "type": "string",
            "default": "p"
        },
        "studioTypographyPreset": {
            "type": "string",
            "default": "body-text"
        },
        "studioTextColor": {
            "type": "string",
            "default": ""
        },
        "studioBackgroundColor": {
            "type": "string",
            "default": ""
        },
        "studioSpacing": {
            "type": "object",
            "default": {
                "margin": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "padding": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                }
            }
        },
        "customFontSize": {
            "type": "string",
            "default": ""
        },
        "customFontWeight": {
            "type": "string",
            "default": ""
        },
        "customLineHeight": {
            "type": "string",
            "default": ""
        }
    },
    "example": {
        "attributes": {
            "content": "This is Studio Text with typography presets and design token integration.",
            "studioTypographyPreset": "hero-title"
        }
    }
}
