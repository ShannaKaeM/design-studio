{
    "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": false,
        "color": {
            "custom": false,
            "customDuotone": false,
            "customGradient": false,
            "defaultDuotone": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "duotone": [],
            "gradients": [],
            "palette": [
                {
                    "name": "Primary Light",
                    "slug": "primary-light",
                    "color": "var(--st-primary-light)"
                },
                {
                    "name": "Primary",
                    "slug": "primary",
                    "color": "var(--st-primary)"
                },
                {
                    "name": "Primary Dark",
                    "slug": "primary-dark",
                    "color": "var(--st-primary-dark)"
                },
                {
                    "name": "Secondary Light",
                    "slug": "secondary-light",
                    "color": "var(--st-secondary-light)"
                },
                {
                    "name": "Secondary",
                    "slug": "secondary",
                    "color": "var(--st-secondary)"
                },
                {
                    "name": "Secondary Dark",
                    "slug": "secondary-dark",
                    "color": "var(--st-secondary-dark)"
                },
                {
                    "name": "Neutral Light",
                    "slug": "neutral-light",
                    "color": "var(--st-neutral-light)"
                },
                {
                    "name": "Neutral",
                    "slug": "neutral",
                    "color": "var(--st-neutral)"
                },
                {
                    "name": "Neutral Dark",
                    "slug": "neutral-dark",
                    "color": "var(--st-neutral-dark)"
                },
                {
                    "name": "Base Lightest",
                    "slug": "base-lightest",
                    "color": "var(--st-base-lightest)"
                },
                {
                    "name": "Base Lighter",
                    "slug": "base-lighter",
                    "color": "var(--st-base-lighter)"
                },
                {
                    "name": "Base Light",
                    "slug": "base-light",
                    "color": "var(--st-base-light)"
                },
                {
                    "name": "Base",
                    "slug": "base",
                    "color": "var(--st-base)"
                },
                {
                    "name": "Base Dark",
                    "slug": "base-dark",
                    "color": "var(--st-base-dark)"
                },
                {
                    "name": "Base Darker",
                    "slug": "base-darker",
                    "color": "var(--st-base-darker)"
                },
                {
                    "name": "Base Darkest",
                    "slug": "base-darkest",
                    "color": "var(--st-base-darkest)"
                },
                {
                    "name": "Success",
                    "slug": "success",
                    "color": "var(--st-success)"
                },
                {
                    "name": "Warning",
                    "slug": "warning",
                    "color": "var(--st-warning)"
                },
                {
                    "name": "Error",
                    "slug": "error",
                    "color": "var(--st-error)"
                },
                {
                    "name": "Info",
                    "slug": "info",
                    "color": "var(--st-info)"
                }
            ]
        },
        "spacing": {
            "customSpacingSize": false,
            "spacingSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "var(--st-space-sm)"
                },
                {
                    "name": "Medium", 
                    "slug": "medium",
                    "size": "var(--st-space-md)"
                },
                {
                    "name": "Large",
                    "slug": "large", 
                    "size": "var(--st-space-lg)"
                }
            ],
            "units": ["px", "em", "rem", "vh", "vw", "%"]
        },
        "typography": {
            "customFontSize": false,
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "var(--st-text-sm)"
                },
                {
                    "name": "Medium",
                    "slug": "medium", 
                    "size": "var(--st-text-base)"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "var(--st-text-lg)"
                },
                {
                    "name": "Extra Large",
                    "slug": "x-large",
                    "size": "var(--st-text-xl)"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true,
        "custom": {
            "studio": {
                "version": "2.0",
                "cssVarsPath": "./assets/css/studio-vars.css",
                "utilitiesPath": "./assets/css/studio-utilities.css"
            }
        }
    },
    "styles": {
        "spacing": {
            "blockGap": "var(--st-space-md)"
        }
    }
}
