{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "studio/image",
    "version": "1.0.0",
    "title": "Studio Image",
    "category": "studio-blocks",
    "icon": "format-image",
    "description": "Display images with advanced styling options.",
    "supports": {
        "html": false,
        "align": ["left", "center", "right", "wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "url": {
            "type": "string",
            "default": ""
        },
        "id": {
            "type": "number"
        },
        "alt": {
            "type": "string",
            "default": ""
        },
        "caption": {
            "type": "string",
            "default": ""
        },
        "aspectRatio": {
            "type": "string",
            "default": "original"
        },
        "objectFit": {
            "type": "string",
            "default": "cover"
        },
        "imageEffect": {
            "type": "string",
            "default": "none"
        },
        "hoverEffect": {
            "type": "string",
            "default": "none"
        },
        "borderRadius": {
            "type": "string",
            "default": "none"
        },
        "captionPosition": {
            "type": "string",
            "default": "below"
        },
        "captionStyle": {
            "type": "string",
            "default": "default"
        },
        "linkTo": {
            "type": "string",
            "default": "none"
        },
        "href": {
            "type": "string",
            "default": ""
        },
        "linkTarget": {
            "type": "string",
            "default": ""
        },
        "rel": {
            "type": "string",
            "default": ""
        },
        "lightbox": {
            "type": "boolean",
            "default": false
        }
    },
    "textdomain": "studio",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css"
}
