{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "studio/container",
    "version": "1.0.0",
    "title": "Studio Container",
    "category": "studio-blocks",
    "icon": "layout",
    "description": "A flexible container block with width, padding, and background options.",
    "keywords": ["container", "wrapper", "section", "layout", "studio"],
    "supports": {
        "html": false,
        "anchor": true,
        "className": true,
        "color": {
            "background": true,
            "gradients": true,
            "link": true,
            "text": true,
            "heading": true,
            "button": true,
            "__experimentalDefaultControls": {
                "background": true,
                "text": true
            }
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true,
            "__experimentalDefaultControls": {
                "color": true,
                "radius": true,
                "style": true,
                "width": true
            }
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true,
            "__experimentalDefaultControls": {
                "margin": true,
                "padding": true,
                "blockGap": true
            }
        },
        "typography": {
            "fontSize": true,
            "fontFamily": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "__experimentalDefaultControls": {
                "fontSize": true
            }
        },
        "dimensions": {
            "minHeight": true,
            "aspectRatio": true
        },
        "position": {
            "sticky": true
        },
        "shadow": true,
        "align": ["wide", "full"],
        "__experimentalLayout": true,
        "layout": {
            "allowSwitching": false,
            "allowInheriting": false,
            "default": {
                "type": "default"
            }
        }
    },
    "attributes": {
        "widthPreset": {
            "type": "string",
            "default": "content"
        },
        "paddingPreset": {
            "type": "string",
            "default": "medium"
        },
        "heightPreset": {
            "type": "string",
            "default": "auto"
        },
        "tagName": {
            "type": "string",
            "default": "div"
        },
        "minHeight": {
            "type": "string",
            "default": ""
        },
        "backgroundImage": {
            "type": "object",
            "default": null
        },
        "backgroundImageId": {
            "type": "number",
            "default": null
        },
        "backgroundImageUrl": {
            "type": "string",
            "default": ""
        },
        "backgroundOverlay": {
            "type": "object",
            "default": {
                "color": "",
                "opacity": 0.5
            }
        },
        "hasBackgroundOverlay": {
            "type": "boolean",
            "default": false
        }
    },
    "example": {
        "attributes": {
            "widthPreset": "wide",
            "paddingPreset": "large"
        },
        "innerBlocks": [
            {
                "name": "studio/text",
                "attributes": {
                    "content": "This is content inside a Studio Container",
                    "typographyPreset": "body"
                }
            }
        ]
    },
    "textdomain": "studio",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css"
}
