{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "studio/grid",
    "version": "1.0.0",
    "title": "Studio Grid",
    "category": "studio-blocks",
    "icon": "grid-view",
    "description": "Create responsive grid layouts with flexible column configurations.",
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "padding": true,
            "margin": true,
            "blockGap": true
        },
        "color": {
            "background": true,
            "gradients": true
        }
    },
    "attributes": {
        "columns": {
            "type": "number",
            "default": 2
        },
        "columnsMobile": {
            "type": "number",
            "default": 1
        },
        "columnsTablet": {
            "type": "number",
            "default": 2
        },
        "gap": {
            "type": "string",
            "default": "medium"
        },
        "alignItems": {
            "type": "string",
            "default": "stretch"
        },
        "justifyItems": {
            "type": "string",
            "default": "stretch"
        },
        "minHeight": {
            "type": "string",
            "default": ""
        },
        "autoFlow": {
            "type": "string",
            "default": "row"
        },
        "autoRows": {
            "type": "string",
            "default": "auto"
        }
    },
    "textdomain": "studio",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css"
}
